<div class="well col-md-6 col-md-offset-3">
  <%= form_for(@member, url: member_registration_path(@member)) do |f| %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control", placeholder: "Minimum 6 & Maximum 50 characters" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control", placeholder: "Minimum 6 & Maximum 50 characters" %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", placeholder: "Valid email under 255 characters" %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.email_field :phone_number, class: "form-control", placeholder: "not more than 10 digits" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", placeholder: "Minimum 6 characters" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Must match the above password" %>
    </div>
    <div class="form-group">
      <%= f.submit "Sign Up", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
