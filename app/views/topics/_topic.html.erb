<div class="list-group">
<%= link_to topic_comments_path(topic), remote: true, class: "list-group-item" do %>
  <h3 class="list-group-item-heading"><%= topic.title %> <span class="badge"><%= "#{time_ago_in_words(topic.created_at)} ago"%></span> </h3>
  <h5 class="list-group-item-text"><%= topic.description %> </h5>
<% end %>
</div>