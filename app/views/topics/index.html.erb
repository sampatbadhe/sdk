<p id="notice"><%= notice %></p>
<h1>Topics</h1>

<% @topics.each do |topic| %>
  <div class="row">
    <div class="col-sm-10">
      <%= render 'topic', topic: topic %>
    </div>
    <div class="col-sm-2">
      <%= render 'topic_actions', topic: topic %>
    </div>
  </div>
<% end %>

<%= link_to 'New Topic', new_topic_path, class: "btn btn-link" %>
